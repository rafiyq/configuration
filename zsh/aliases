# apps
alias vim='nvim.appimage'

#script
alias addSrt='addSrt.sh'
alias custom_status='custom_status.sh'
alias emacsclient-server='emacsclient-server.sh'
alias gcpp='gcpp.sh'
alias internet-speed-test='internet-speed-test.sh'
alias rapikan_unduhan='rapikan_unduhan.py'
alias spacemacs='spacemacs.svg'
alias speech-to-text='speech-to-text.py'
alias start-sway='start-sway.sh'
alias ytdl='ytdl.sh'
alias zsh-profile='zsh-profile.sh'
alias grml-zsh='zsh-profile.sh grml'
alias ohmyzsh='zsh-profile.sh ohmyzsh'

# Color
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# List
alias ll='ls -alFh'
alias lll='ls -lFh'
alias la='ls -A'
alias l='ls -CF'

# System
alias wifi-on='sudo systemctl start wpa_supplicant@wlp3s0'
alias wifi-off='sudo systemctl stop wpa_supplicant@wlp3s0'
alias wifi-restart='sudo systemctl restart wpa_supplicant@wlp3s0'
alias bt-on='sudo systemctl start bluetooth'
alias bt-off='sudo systemctl stop bluetooth'

# Bluetooth
alias connect-Fenda='bluetoothctl power on && bluetoothctl connect F0:13:C3:05:F0:3E'
alias disconnect-Fenda='bluetoothctl connect F0:13:C3:05:F0:3E && bluetoothctl power off'


